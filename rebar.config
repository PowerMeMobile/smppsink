{erl_opts, [
    warn_export_all,
    warn_missing_spec,
    %warnings_as_errors,
    debug_info
]}.
{xref_checks, [
    undefined_function_calls,
    deprecated_function_calls,
    locals_not_used
]}.
{sub_dirs, ["rel"]}.
{deps, [
    {alley_common, ".*", {git, "https://github.com/PowerMeMobile/alley_common.git", {tag, "1.0.0"}}},
    {pmm_smpplib, "0.2.0", {git, "git://github.com/PowerMeMobile/pmm_smpplib.git", {branch, "long_queues_fix"}}},
    {libuuid, "1.0.0", {git, "git://github.com/iamaleksey/libuuid.git", {branch, "master"}}},
    {lager, ".*", {git, "git://github.com/basho/lager.git", {tag, "1.2.1"}}},
    {gproc, "0.*", {git, "https://github.com/uwiger/gproc.git", {tag, "0.2.16"}}},

    {entop, "0.0.1", {git, "git://github.com/mazenharake/entop.git", {branch, "master"}}},
    {eper, ".*", {git, "git://github.com/massemanet/eper.git", {branch, "master"}}},
    {recon, ".*", {git, "git://github.com/ferd/recon.git", {tag, "2.2.0"}}}
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
