{erl_opts, [
	warn_export_all,
	warn_missing_spec,
	%warnings_as_errors,
	debug_info
]}.
{xref_checks, [
	undefined_function_calls,
	deprecated_function_calls,
	locals_not_used
]}.
{sub_dirs, ["rel"]}.
{deps, [
	{sync, ".*", {git, "git://github.com/ten0s/sync.git", {branch, "dk_support_release"}}}
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
